<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/color3"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/color2"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/color2"
                    android:src="@drawable/ic_language" />

                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language_setting"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Language Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/englishButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:text="@string/english"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_english_flag"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconTint="@null"
                app:strokeColor="@color/color2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/frenchButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:text="@string/french"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_french_flag"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconTint="@null"
                app:strokeColor="@color/color2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/arabicButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/arabic"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_arabic_flag"
                app:iconGravity="start"
                app:iconPadding="16dp"
                app:iconTint="@null"
                app:strokeColor="@color/color2" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>